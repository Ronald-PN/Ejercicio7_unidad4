@model IEnumerable<MVC_CRUD_DiplomadoUASD.Models.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


    <a class="btn btn-primary" style="margin-bottom:10px" href="/Empleadoes/Create">
        Crear Nuevo


    </a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdDep)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDep)
            </td>
            <td>
                <a href="/Empleadoes/Edit?id=@item.Id"
                   class="btn btn-primary">Editar</a>

                <a href="/Empleadoes/Details?id=@item.Id"
                   class="btn btn-success">Detalles</a>

                <a href="/Empleadoes/Delete?id=@item.Id"
                   class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
    }

</table>


